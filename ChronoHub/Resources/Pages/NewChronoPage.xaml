<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="ChronoHub.NewChronoPage">
    <StackLayout Padding="20" Spacing="10" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
        <Label Text="Enter the chronometer name:" />
        <Entry x:Name="chrono_name_form" Placeholder="Chrono Name" />
        <Button Text="Add" Clicked="OnAddButtonClicked" />
        <Button Text="Cancel" Clicked="OnCancelButtonClicked" />
    </StackLayout>
</toolkit:Popup>
